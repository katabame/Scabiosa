
// Stylus function
vender(prop, arg)
	-moz-{prop}: arg
	-webkit-{prop}: arg
	{prop}: arg

// Color map
@import '../arg/color.styl'

// font
@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700')
@import url('https://fonts.googleapis.com/earlyaccess/roundedmplus1c.css')
@import url('https://fonts.googleapis.com/earlyaccess/notosansjapanese.css')

for key, color in color
	.{key}
		if (key == 'yellow' or key == 'sunflower' or key == 'lime' or key == 'white') // hardcoded
			color: #000
		else
			color: #fff
		background-color: color !important
		border-color: color !important
		a
			text-decoration: none
			color: color

shadow = rgba(0 0 0 0.25)

// Useful CSS function
.center
	text-align: center
	& > *
		margin-left: auto !important
		margin-right: auto !important

// CSS design
*
	vender box-sizing border-box

html, body
	font-family: 'Montserrat', 'Rounded M+ 1c', 'Noto Sans Japanese'
	font-weight: 400
	background-color: #fff
	color: #333
	position: relative

a
	text-decoration: none
	color: #333

.label, label
	display: inline-block
	font-size: .75rem
	padding: .3rem .5rem
	font-weight: 700
	cursor: default
	letter-spacing: 1px
	border: 1px solid #212121

.button
	@extend .label
	display: inline
	font-size: 1rem
	cursor: pointer
	padding: .5rem 1rem
	white-space: nowrap
	letter-spacing: 2px
	vender user-select none
	margin: .25rem .5rem
	position: relative
	border-radius: 5px
	&:after
		content: ""
		position: absolute
		left: 0
		top: 0
		width: 100%
		height: 100%
		background: shadow
		opacity: 0
		transition: .25s opacity
	&:active
		&:after
			opacity: 1
			border-radius: 4px

.well, well
	min-height: 20px
	padding: 19px
	margin-bottom: 20px
	background-color: #f5f5f5
	border: 1px solid #e3e3e3
	border-radius: 2px
	box-shadow: inset 0 0.5px 1px shadow

.code, code
	padding: 2px 4px
	font-size: 90%
	color: #c7254e
	background-color: #f9f2f4

.panel
	width: 100%
	margin: 0 1.25%
	margin-bottom: 2rem
	border: 1px solid
	overflow: hidden
	box-shadow: 0 0 .1rem shadow
	.header, header
		padding: 1rem .4rem
		position: relative
		border-bottom: 1px solid #e3e3e3
	.footer, footer
		padding: 1rem .4rem
		position: relative
		border-top: 1px solid #e3e3e3
	.body, body
		padding: 1.5rem 1rem

for i in 1..6
	.h{i}, h{i}
		color: inherit
		font-weight: 700
		font-size: (6 - i)*.36rem
		margin: 1rem 0
		display: block

p
	margin: 0 0 12px

small, .small
	font-size: 75%

b, strong
	font-weight: bold

i, em
	font-style: italic

hr
	border-top: 1px solid #e3e3e3

blockquote
	padding: 12px 24px
	margin: 0 0 24px
	font-size: 16px
	border-left: 5px solid #9e9e9e
	background-color: #e9e9e9

@keyframes progress-bar-animation
	from
		background-position 3rem 0
	to
		background-position 0 0

.progress
	font-size 1rem
	width 100%
	height 1.25rem
	margin .5rem 0
	background-color #fff
	border: 1px solid shadow

.progress-bar
	@extend .progress
	background-color: #212121
	color: #fff
	margin: 0 0
	border: none
	width: 0
	height: 100%
	display: flex
	flex-direction: row
	justify-content: center
	align-items: center
	&.stripe
		background-image: linear-gradient(45deg,rgba(255,255,255,.15) 25%,transparent 25%,transparent 50%,rgba(255,255,255,.15) 50%,rgba(255,255,255,.15) 75%,transparent 75%,transparent)!important
		background-size: 3rem 3rem !important
		box-shadow: inset 0 0 .1rem shadow
	&.animation
		animation: progress-bar-animation 2s linear infinite

// Grid System
.grid
	display: flex
	flex-direction: row
	flex-wrap: wrap
	&.reverse
		display: flex
		flex-direction: row-reverse
		flex-wrap: wrap
	&.nowrap-x
		flex-wrap: nowrap
	&.left
		justify-content: flex-start
	&.center, &.x-center
		justify-content: center
	&.right
		justify-content: flex-end
	&.fill, &.fill-x, &.split
		justify-content: space-between
	&.equalize
		justify-content: space-around
	&.top
		align-items: flex-start
	&.middle, &.y-center
		align-items: center
	&.baseline
		align-items: baseline
	&.bottom
		align-items: flex-end
	& > .grow-x
		flex-grow: 1
.stretch, .grow-y
	align-self:stretch

.fill
	&.solo, &.full
		width: 100%
	&.duo, &.half, &.fifty
		width: 50%
	&.trio, &.one-third
		width: calc(100% / 3)
	&.two-thirds
		width: calc(100% / 3 * 2)
	&.quad, &.quarter
		width: 25%
	&.three-quarters
		width: 75%
	&.penta, &.twenty
		width: 20%
	&.thirty
		width: 30%
	&.forty
		width: 40%
	&.sixty
		width: 60%
	&.seventy
		width: 70%
	&.eighty
		width: 80%

.solo, .full
	width: 98%
	margin: 1em 1%
.duo, .half
	width: 48%
	margin: 1em 1%
.trio, .one-third
	width: calc(94% / 3)
	margin: 1em 1%
.two-thirds
	width: calc(97% / 3 * 2)
	margin: 1em 1%
.quad, .quarter
	width: 23%
	margin: 1em 1%
.three-quarters
	width: 73%
	margin: 1em 1%
.penta, .twenty
	width: 18%
	margin: 1em 1%
.thirty
	width: 28%
	margin: 1em 1%
.forty
	width: 38%
	margin: 1em 1%
.sixty
	width: 58%
	margin: 1em 1%
.seventy
	width: 68%
	margin: 1em 1%
.eighty
	width: 78%
	margin: 1em 1%
